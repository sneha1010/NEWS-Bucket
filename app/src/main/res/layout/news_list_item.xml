        <TextView
            android:id="@+id/txtHeadNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>